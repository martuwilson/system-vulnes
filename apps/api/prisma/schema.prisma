// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies     Company[]
  subscription  Subscription?
  companyUsers  CompanyUser[]

  @@map("users")
}

model Company {
  id     String @id @default(cuid())
  name   String
  domain String
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  assets       Asset[]
  scans        SecurityScan[]
  companyUsers CompanyUser[]
  notifications NotificationSetting[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Asset {
  id        String  @id @default(cuid())
  domain    String
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("assets")
}

model SecurityScan {
  id          String    @id @default(cuid())
  companyId   String
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  domain      String    // Dominio escaneado
  status      ScanStatus
  healthScore Int       @default(0)
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  findings Finding[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("security_scans")
}

model Finding {
  id             String          @id @default(cuid())
  scanId         String
  scan           SecurityScan    @relation(fields: [scanId], references: [id], onDelete: Cascade)
  category       FindingCategory
  severity       Severity
  title          String
  description    String
  recommendation String
  status         FindingStatus   @default(OPEN)

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("findings")
}

model Task {
  id          String    @id @default(cuid())
  findingId   String
  finding     Finding   @relation(fields: [findingId], references: [id], onDelete: Cascade)
  title       String
  description String
  isCompleted Boolean   @default(false)
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tasks")
}

model Subscription {
  id                       String             @id @default(cuid())
  userId                   String             @unique
  user                     User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                     SubscriptionPlan
  status                   SubscriptionStatus
  mercadopagoPaymentId     String?            @unique
  mercadopagoPreapprovalId String?            @unique
  currentPeriodStart       DateTime
  currentPeriodEnd         DateTime
  cancelAtPeriodEnd        Boolean            @default(false)
  canceledAt               DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subscriptions")
}

model PlanLimits {
  id                    String           @id @default(cuid())
  plan                  SubscriptionPlan @unique
  maxDomains            Int              // DEPRECATED: usar maxCompanies
  maxAssets             Int              // DEPRECATED: usar maxAssetsPerCompany
  maxCompanies          Int?             // 1, 3, -1 (unlimited) - Empresas que puede monitorear
  maxAssetsPerCompany   Int?             // 10, 20, -1 (unlimited) - Assets por empresa  
  scanFrequencyHours    Int              // 168(semanal), 24(diario), 6(tiempo real)
  hasSlackIntegration   Boolean          @default(false)
  hasTeamsIntegration   Boolean          @default(false)
  hasPDFReports         Boolean          @default(false)
  hasCSVReports         Boolean          @default(false)
  hasComplianceReports  Boolean          @default(false)
  hasAuditorAccess      Boolean          @default(false)
  hasPrioritySupport    Boolean          @default(false)
  hasHistoricalTrends   Boolean          @default(false)
  maxUsers              Int              // -1 para unlimited
  priceUsd              Int              // precio en centavos USD

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("plan_limits")
}

enum ScanStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum FindingCategory {
  EMAIL_SECURITY
  SSL_CERTIFICATE
  WEB_SECURITY
  NETWORK_SECURITY
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum FindingStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  IGNORED
}

enum SubscriptionPlan {
  TRIAL
  STARTER
  GROWTH
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

enum CompanyRole {
  OWNER
  ADMIN
  MEMBER
  AUDITOR  // Para acceso de consultores externos
  VIEWER   // Solo lectura
}

enum ReportFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum ReportFormat {
  PDF
  CSV
  JSON
}

model CompanyUser {
  id        String      @id @default(cuid())
  userId    String
  companyId String
  role      CompanyRole @default(MEMBER)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  company   Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  invitedAt DateTime?
  joinedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, companyId])
  @@map("company_users")
}

model NotificationSetting {
  id           String  @id @default(cuid())
  userId       String
  companyId    String
  company      Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  emailAlerts  Boolean @default(true)
  slackWebhook String?
  teamsWebhook String?
  
  criticalOnly Boolean @default(false) // Solo alertas cr√≠ticas
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, companyId])
  @@map("notification_settings")
}

model ScheduledReport {
  id          String      @id @default(cuid())
  companyId   String
  frequency   ReportFrequency
  format      ReportFormat
  recipients  String      // JSON array de emails
  isActive    Boolean     @default(true)
  lastSentAt  DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("scheduled_reports")
}
